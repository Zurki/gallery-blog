---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog'))
	.filter((post) => !post.data.draft)
	.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2rem);
				margin: auto;
				padding: 3rem 1rem;
			}
			section h1 {
				font-size: 2.5rem;
				margin-bottom: 2rem;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li a {
				display: block;
				text-decoration: none;
				color: inherit;
				height: 100%;
			}
			.post-card {
				border: 1px solid var(--bg3);
				border-radius: 8px;
				overflow: hidden;
				background: var(--bg1);
				transition: transform 0.2s, box-shadow 0.2s, background-color 0.3s ease;
				height: 100%;
				display: flex;
				flex-direction: column;
			}
			.post-card:hover {
				transform: translateY(-4px);
				box-shadow: var(--box-shadow);
				background: var(--bg2);
			}
			ul li:first-child {
				width: 100%;
			}
			ul li:first-child .post-card {
				flex-direction: row;
			}
			ul li:first-child .post-card .image-wrapper {
				width: 50%;
			}
			ul li:first-child .post-card .content {
				width: 50%;
			}
			ul li:first-child .title {
				font-size: 2rem;
			}
			.image-wrapper {
				width: 100%;
				overflow: hidden;
			}
			.image-wrapper img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				display: block;
			}
			.content {
				padding: 1.5rem;
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				flex: 1;
			}
			.title {
				margin: 0;
				color: var(--accent);
				line-height: 1.2;
				font-size: 1.5rem;
			}
			.date {
				margin: 0;
				color: var(--fg3);
				font-size: 0.9rem;
			}
			.description {
				margin: 0.5rem 0 0 0;
				color: var(--fg1);
				line-height: 1.6;
			}
			.tags {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
				margin-top: auto;
				padding-top: 1rem;
			}
			.tag {
				background: var(--bg3);
				color: var(--orange);
				padding: 0.25rem 0.75rem;
				border-radius: 4px;
				font-size: 0.85rem;
				font-weight: 600;
			}
			@media (max-width: 720px) {
				ul {
					gap: 1.5rem;
				}
				ul li,
				ul li:first-child {
					width: 100%;
				}
				ul li:first-child .post-card {
					flex-direction: column;
				}
				ul li:first-child .post-card .image-wrapper,
				ul li:first-child .post-card .content {
					width: 100%;
				}
				ul li:first-child .title {
					font-size: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Blog Posts</h1>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<div class="post-card">
										{post.data.heroImage && (
											<div class="image-wrapper">
												<Image width={720} height={360} src={post.data.heroImage} alt="" />
											</div>
										)}
										<div class="content">
											<h4 class="title">{post.data.title}</h4>
											<p class="date">
												<FormattedDate date={post.data.date} />
											</p>
											{post.data.description && (
												<p class="description">{post.data.description}</p>
											)}
											{post.data.tags && post.data.tags.length > 0 && (
												<div class="tags">
													{post.data.tags.map((tag) => (
														<span class="tag">{tag}</span>
													))}
												</div>
											)}
										</div>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
