---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import GraphView from '../components/GraphView.astro';

type Props = CollectionEntry<'blog'>['data'] | {
	title: string;
	description: string;
	date?: Date;
	pubDate?: Date;
	tags?: string[];
	heroImage?: any;
};

const { title, description, date, pubDate, tags } = Astro.props;
const displayDate = date || pubDate;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
				position: relative;
			}
			
			.content-wrapper {
				max-width: 720px;
				margin: 0 auto;
			}
			
			.sidebar {
				position: fixed;
				right: 2rem;
				top: 100px;
				z-index: 10;
			}
			
			@media (max-width: 1400px) {
				.sidebar {
					display: none;
				}
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 100%;
				max-width: 720px;
				padding: 1em 0.5em;
				color: var(--fg1);
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: var(--fg3);
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="content-wrapper">
				<article>
					<div class="prose">
						<div class="title">
							{displayDate && (
								<div class="date">
									<FormattedDate date={displayDate} />
								</div>
							)}
							<h1>{title}</h1>
							{tags && tags.length > 0 && (
								<div class="tags">
									{tags.map((tag) => (
										<span class="tag">{tag}</span>
									))}
								</div>
							)}
							<hr />
						</div>
						<slot />
						<div class="back-link">
							<a href="/">‚Üê Back to all posts</a>
						</div>
					</div>
				</article>
			</div>
			<aside class="sidebar">
				<GraphView />
			</aside>
		</main>
		<Footer />
		<style is:inline>
			.tags {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
				margin: 1rem 0;
				justify-content: center;
			}
			.tag {
				background: var(--bg3);
				color: var(--orange);
				padding: 0.25rem 0.75rem;
				border-radius: 4px;
				font-size: 0.85rem;
				font-weight: 600;
			}
			.back-link {
				margin-top: 3rem;
				padding-top: 2rem;
				border-top: 1px solid var(--bg3);
			}
			.back-link a {
				color: var(--accent);
				text-decoration: none;
			}
			.back-link a:hover {
				text-decoration: underline;
			}
		</style>
	</body>
</html>
